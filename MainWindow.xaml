<Window x:Class="SocialNetworkAnalysis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sosyal Ağ Analizi - Görselleştirme" Height="600" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/> <ColumnDefinition Width="250"/> </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="5">
            <Canvas x:Name="MainCanvas" Background="#f0f0f0" MouseLeftButtonDown="MainCanvas_MouseLeftButtonDown"/>
        </Border>

        <StackPanel Grid.Column="1" Margin="10" Background="WhiteSmoke">
            <TextBlock Text="KULLANICI BİLGİLERİ" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            
            <TextBlock Text="Adı:" FontWeight="Bold"/>
            <TextBlock x:Name="TxtName" Text="-" Margin="0,0,0,10"/>

            <TextBlock Text="Aktiflik:" FontWeight="Bold"/>
            <TextBlock x:Name="TxtActivity" Text="-" Margin="0,0,0,10"/>

            <TextBlock Text="Etkileşim:" FontWeight="Bold"/>
            <TextBlock x:Name="TxtInteraction" Text="-" Margin="0,0,0,10"/>

            <TextBlock Text="Bağlantı Sayısı:" FontWeight="Bold"/>
            <TextBlock x:Name="TxtConnection" Text="-" Margin="0,0,0,20"/>

            <Button Content="Yeniden Çiz (Rastgele)" Click="BtnRedraw_Click" Padding="5" Background="#DDDDDD"/>
        </StackPanel>
    </Grid>
</Window>